{
  "name": "wwise-cyber-threat-map",
  "version": "1.0.0",
  "description": "Open-source Cyber-Attack Threat Map web app",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel dev",
    "build": "pnpm --recursive build",
    "start": "cd packages/server && node dist/index.js",
    "lint": "pnpm --recursive lint",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
} 