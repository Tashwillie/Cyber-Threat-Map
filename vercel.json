{
  "version": 2,
  "buildCommand": "npm install -g pnpm && rm -f pnpm-lock.yaml && pnpm install --ignore-scripts && pnpm run build",
  "builds": [
    {
      "src": "packages/server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["packages/client/dist/**"],
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "packages/server/src/index.ts"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "packages/server/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "packages/server/src/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}